<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ValmontApp.Mobile.CustomControls.HeaderView">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{OnPlatform Android=150, iOS= 200}" />
            </Grid.RowDefinitions>
            <StackLayout Margin="20,0,20,0">
                <Image Source="valmont_logo_white.png" Margin="{OnPlatform Android='0,30,0,0', iOS='0,80,0,0'}" />
                <StackLayout Orientation="Horizontal" Margin="{OnPlatform Android='0,20,0,120', iOS='0,20,0,50'}"  HeightRequest="40">
                    <Label x:Name="TitleLabel" Text="Welcome, "  TextColor="White" FontAttributes="Bold" FontFamily="robot" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
                    <Button x:Name="LogoutButton" Text="Logout" TextColor="White" HorizontalOptions="EndAndExpand" Clicked="Logout_Tapped" />
                </StackLayout>
            </StackLayout>
        </Grid>

    </ContentView.Content>
</ContentView>

 
   